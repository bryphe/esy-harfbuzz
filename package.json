{
  "name": "esy-harfbuzz",
  "version": "0.1.0",
  "description": "Mirror of harfbuzz",
  "license": "MIT",
  "esy": {
    "build": [
        ["bash", "-c", "#{os == 'windows' ? './esy/configure-windows.sh' : './configure'}"],
        ["make"],
        ["make", "install"],
        ["./esy/test.sh"]
    ],
    "buildsInSource": true,
    "exportedEnv": {
        "HARFBUZZ_INCLUDE_PATH": {
            "val": "#{self.install / 'include' / 'harfbuzz'}",
            "scope": "global"
        },
        "HARFBUZZ_LIB_PATH": {
            "val": "#{self.lib}",
            "scope": "global"
        },
        "HARFBUZZ_BIN_PATH": {
            "val": "#{self.bin}",
            "scope": "global"
        }
    }
  },
  "dependencies": {
  }
}
